@import "lib/base.css.scss";
div#little_menu_container {
  display: none;
}
@media all
and (min-width: 320px)
and (max-width: 700px) {
  body {
    min-width: 0;
  }
  form {
    .form-submit, .form-section {
      width: auto !important;
      .button {
        display: block;
      }
    }
    #email {
      margin-bottom: 5px;
    }
    .form-field {
      label {
        width: 60px !important;
      }
      .input {
        width: auto;
        input, textarea {
          width: auto !important;
        }
      }
    }
  }
  #home {
    #content-wrap {
      width: auto;
      margin-right: 0px;
      #content {
        margin: 0;
      }
    }
    #sidebar {
      width: auto;
    }
    #manifesto {
      p {
        margin-right: .8em;
      }
    }
    .wrap {
      width: auto;
    }
    #pitch {
      .col {
        width: auto;
        margin: 0 auto;
        float: none;
        border-right: none;
        img {
          display: block;
          margin: 0 auto;
        }
      }
      .wrap {
        width: auto;
      }
    }
    #welcome #intro {
      float: none;
      margin-bottom: .5em;
    }
    #signup {
      float: none;
      h3 {
        float: none;
        text-align: center;
        padding-top: 0px;
        padding-bottom: 10px;
      }
      .option {
        padding-right: 0px;
      }
      .username {
        float: right;
        margin-right: 0;
      }
    }
  }
  // prevents window from resizing
  // without freezing zoom
  input[type='text'], input[type='password'],textarea {
    font-size: 16px !important;
  }
  #header, #page, #footer {
    width: auto;
  }
  #header {
    #main {
      display: none;
    }
    #profile_menu {
      display: none;
    }
    #little_menu_container {
      display: block;
      #menu_button {
        border: 1px solid white;
        border-radius: 5px;
        height: 6px;
        width: 10px;
        margin: 16px 11px 0 0;
        padding: 10px;
        background-image: url('<%= asset_path 'icons_sprite.png' %>');
        background-position: -12px -148px;
        background-repeat: no-repeat;
        background-size: 70px auto;
        background-origin: content-box;
        background-color: $content_background;
        float: right;
      }
      #menu_button.active {
        -webkit-transform: rotate(180deg);
        transform: rotate(180deg);
        background-position: -47px -148px;
      }
      ul {
        display: none;
        z-index: 999;
        font-size: 150%;
        padding: 8px 12px 8px 8px;
        list-style: none;
        float: right;
        position: absolute;
        top: 50px;
        right: 0;
        background-color: $header_color;
        border-radius: 0 0 0 5px;
      }
    }
  }
  #sidebar {
    display: none;
  }
  #content-wrap {
    width: auto;
    margin-right: 0px;
    #updates-menu {
      li {
        padding-right: .5em;
      }
    }
    .updates .update .entry-content {
      padding-right: .5em;
    }
  }
  #footer #footer-logo {
    padding-right: .5em;
    margin-right: 0;
  }
}
